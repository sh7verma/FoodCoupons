<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/_5sdp"
    android:paddingRight="@dimen/_5sdp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/ic_bg" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_50sdp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:src="@mipmap/ic_logo_temp" />

            <app.com.foodcoupons.customviews.BoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/welcome"
                android:textColor="@color/black"
                android:textSize="@dimen/_20ssp" />


            <app.com.foodcoupons.customviews.RegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:text="@string/enter_your_phone_number_on_which_otp_will_be_sent"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:background="@drawable/white_round"
                android:elevation="@dimen/_10sdp"
                android:orientation="horizontal">

                <app.com.foodcoupons.customviews.SemiboldTextView
                    android:id="@+id/txt_country_code"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="?selectableItemBackground"
                    android:drawablePadding="@dimen/_8sdp"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="+65"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15ssp" />

                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/grey_line" />

                <app.com.foodcoupons.customviews.MaterialEditText
                    android:id="@+id/ed_number"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:hint="@string/enter_phone_number_hint"
                    android:inputType="number"
                    android:maxLength="@integer/max_phone"
                    android:maxLines="1"
                    android:textSize="@dimen/_15sdp"
                    app:met_hideUnderline="true"
                    app:met_textColorHint="@color/grey_color" />

                <LinearLayout
                    android:id="@+id/ll_next"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/app_color_right_round"
                    android:foreground="?selectableItemBackground"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_18sdp"
                        android:layout_marginRight="@dimen/_18sdp"
                        android:src="@mipmap/ic_next" />

                </LinearLayout>
            </LinearLayout>

            <app.com.foodcoupons.customviews.RegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_60sdp"
                android:gravity="center_vertical"
                android:text="@string/or"
                android:textColor="@color/grey_text"
                android:textSize="@dimen/_13ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_facebook_login"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_fb_home" />

                <ImageView
                    android:id="@+id/img_gmail_login"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_google_home" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>

