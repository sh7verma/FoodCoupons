<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_main"
    android:layout_margin="@dimen/_5sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_77sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardUseCompatPadding="true">

            <ImageView
                android:id="@+id/img_deal"
                android:layout_width="@dimen/_68sdp"
                android:layout_height="@dimen/_75sdp"
                android:scaleType="centerCrop" />

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="vertical">

            <app.com.foodcoupons.customviews.BoldTextView
                android:id="@+id/txt_deal_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_1sdp"
                android:text="KFC Compass One"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />

            <app.com.foodcoupons.customviews.SemiboldTextView
                android:id="@+id/txt_deal_offer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="flat 38%off"
                android:textColor="@color/grey_text_dark"
                android:textSize="@dimen/_10ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <app.com.foodcoupons.customviews.LightTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/app_color_corners_round"
                    android:paddingBottom="@dimen/_3sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:text="Get Deal"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10ssp" />

                <app.com.foodcoupons.customviews.SemiboldTextView
                    android:id="@+id/txt_valid_till"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end|center_vertical"
                    android:text="Valid till 21 sep"
                    android:textColor="@color/grey_text"
                    android:textSize="@dimen/_10ssp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@color/light_grey" />
</LinearLayout>